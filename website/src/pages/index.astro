---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro';
import Newsletter from '../components/Newsletter.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="App Name - Transform Your Life">
  <Banner />
  
  <main>
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          <div>
            <h3 class="text-2xl font-bold mb-4">Feature 1</h3>
            <p class="text-gray-600">Description of your first amazing feature.</p>
          </div>
          <div>
            <h3 class="text-2xl font-bold mb-4">Feature 2</h3>
            <p class="text-gray-600">Description of your second amazing feature.</p>
          </div>
          <div>
            <h3 class="text-2xl font-bold mb-4">Feature 3</h3>
            <p class="text-gray-600">Description of your third amazing feature.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Newsletter />
  <Footer />
</Layout>